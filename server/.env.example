# Puerto en el que corre el servidor backend
PORT=3000

# Clave secreta para firmar JWTs
JWT_SECRET=clave_secreta

# URL del frontend (usado para CORS, cookies, etc.)
FRONTEND_URL=http://localhost:5173

# URL de conexión completa a la base de datos (PostgreSQL)
DATABASE_URL=postgres://DB_USER:DB_PASSWORD@DB_HOST:DB_PORT/DB_NAME

# O bien, podés usar estas variables por separado
DB_USER=your_db_user
DB_HOST=your_db_host
DB_NAME=your_db_name
DB_PASSWORD=your_db_password
DB_PORT=5432

# Entorno de la aplicación (development, production, test)
NODE_ENV=development
